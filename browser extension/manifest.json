{
  "manifest_version": 3,
  "name": "SecurePass Manager",
  "version": "1.0",
  "description": "Professional password manager that detects and saves passwords",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      
    }
  }
}